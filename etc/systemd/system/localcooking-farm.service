[Unit]
Description=Local Cooking Farm
After=network.target

[Service]
User=localcooking
Group=localcooking
WorkingDirectory=/home/localcooking

ExecStart=/home/localcooking/localcooking-farm/backend/.stack-work/install/x86_64-linux/lts-11.2/8.2.2/bin/localcooking-farm \
  --host farm.localcooking.com:3003 --public-port 80 --tls --production \
  --db-host localhost --db-user localcooking_db --db-name localcooking --db-password ""

[Install]
WantedBy=multi-user.target
